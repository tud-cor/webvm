FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install \
	apt-utils \
	base \
	cowsay \
	dbus \
	dialog \
	fakeroot \
	file \
	gcc \
	git \
	less \
	make \
	man-db \
	manpages \
	nano \
	patch \
	python3 \
	ucf \
	unzip \
	vim \
	whiptail
RUN useradd -m user && echo "user:password" | chpasswd
COPY --chown=user:user ./examples /home/user/examples
ADD https://surfdrive.surf.nl/files/index.php/s/QCuzkQ7Wka69K7y/download /tmp/extra_repository.tar.gz
RUN tar -x -C /home/user -f /tmp/extra_repository.tar.gz \
 && rm /tmp/extra_repository.tar.gz
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
CMD [ "/bin/bash" ]
